---
import Button from '../ui/Button.astro';
import { Image } from 'astro:assets';

export interface Props {
  name?: string;
  title?: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  profileImage?: string;
  backgroundPattern?: boolean;
}

const {
  name = "김개발",
  title = "풀스택 개발자",
  subtitle = "현대적인 웹 기술로 완벽한 디지털 경험을 만듭니다",
  description = "React, Vue.js, Node.js를 활용한 모던 웹 애플리케이션 개발에 특화된 개발자입니다. 사용자 중심의 인터페이스와 확장 가능한 백엔드 아키텍처 설계를 통해 비즈니스 가치를 창출합니다.",
  primaryCta = {
    text: "프로젝트 보기",
    href: "/projects"
  },
  secondaryCta = {
    text: "연락하기",
    href: "/contact"
  },
  profileImage = "/images/profile.jpg",
  backgroundPattern = true,
} = Astro.props;
---

<section 
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-900 dark:to-blue-900"
  role="banner"
  aria-label="메인 히어로 섹션 - 포트폴리오 소개"
  tabindex="-1"
>
  <!-- Background Pattern -->
  {backgroundPattern && (
    <div class="absolute inset-0 opacity-30 dark:opacity-20" aria-hidden="true">
      <div class="absolute inset-0 bg-grid-pattern"></div>
      <!-- Gradient Overlays -->
      <div class="absolute top-0 left-0 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob" aria-hidden="true"></div>
      <div class="absolute top-0 right-0 w-72 h-72 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000" aria-hidden="true"></div>
      <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000" aria-hidden="true"></div>
    </div>
  )}

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content Section -->
      <div class="text-center lg:text-left space-y-8">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-sm font-medium" role="status" aria-label="현재 상태">
          <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse" aria-hidden="true"></div>
          새로운 프로젝트 진행 중
        </div>

        <!-- Main Content -->
        <div class="space-y-6">
          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white">
            안녕하세요, <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              {name}
            </span>입니다
          </h2>
          
          <div class="space-y-2">
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-700 dark:text-gray-300">
              {title} | 서울 기반 웹 개발자
            </h3>
            <p class="text-lg sm:text-xl text-blue-600 dark:text-blue-400 font-medium">
              {subtitle}
            </p>
          </div>
          
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl leading-relaxed">
            {description}
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button 
            href={primaryCta.href}
            variant="primary"
            size="lg"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg"
          >
            {primaryCta.text}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </Button>
          
          <Button 
            href={secondaryCta.href}
            variant="outline"
            size="lg"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-lg transition-all duration-200 hover:scale-105"
          >
            {secondaryCta.text}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </Button>
        </div>

        <!-- Social Links -->
        <nav class="flex items-center justify-center lg:justify-start space-x-6 pt-8" aria-label="소셜 미디어 링크">
          <a 
            href="https://github.com" 
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200"
            aria-label="GitHub 프로필 방문"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a 
            href="https://linkedin.com" 
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200"
            aria-label="LinkedIn 프로필 방문"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href="mailto:contact@example.com" 
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200"
            aria-label="이메일로 연락하기"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </nav>
      </div>

      <!-- Profile Image Section -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Profile Image Container -->
          <div class="relative w-80 h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden bg-gradient-to-br from-blue-400 to-purple-600 p-1 shadow-2xl">
            <div class="w-full h-full rounded-full overflow-hidden bg-white dark:bg-gray-900">
              <!-- Placeholder for now - will be replaced with actual image -->
              <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-800 flex items-center justify-center">
                <svg class="w-32 h-32 text-gray-400 dark:text-gray-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
              <!-- Screen reader description -->
              <span class="sr-only">김개발 풀스택 개발자의 프로필 사진</span>
            </div>
          </div>
          
          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-yellow-400 rounded-xl rotate-12 shadow-lg opacity-80 animate-float" aria-hidden="true"></div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-pink-400 rounded-lg -rotate-12 shadow-lg opacity-80 animate-float animation-delay-1000" aria-hidden="true"></div>
          <div class="absolute top-1/2 -right-8 w-12 h-12 bg-green-400 rounded-full shadow-lg opacity-80 animate-float animation-delay-2000" aria-hidden="true"></div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce" aria-hidden="true">
      <svg class="w-6 h-6 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>

<style>
  /* Custom animations */
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(10deg);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  /* Grid pattern */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  /* Dark mode adjustments for grid */
  .dark .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
  }
</style> 