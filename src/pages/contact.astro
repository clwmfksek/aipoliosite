---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/seo/StructuredData.astro';
---

<Layout
  title="연락하기 - 김개발 | 프로젝트 상담 및 협업 문의"
  description="웹 개발 프로젝트 상담, 협업 제안, 기술 문의를 환영합니다. 이메일, 소셜 미디어, 연락처 폼을 통해 언제든지 연락주세요. 서울 지역 미팅도 가능합니다."
  image="/favicon.svg"
>
  <!-- ContactPoint Schema -->
  <StructuredData
    type="contactPoint"
    data={{
      url: Astro.url.toString(),
    }}
    slot="head"
  />

  <!-- WebPage Schema -->
  <StructuredData
    type="webPage"
    data={{
      title: '연락하기 - 김개발',
      description: '웹 개발 프로젝트 상담, 협업 제안, 기술 문의를 위한 연락처 정보입니다.',
      url: Astro.url.toString(),
      about: 'Contact Information and Communication Channels',
      keywords: ['연락처', '협업', '프로젝트 문의', '웹 개발 상담', '김개발 연락하기'],
    }}
    slot="head"
  />
  <!-- Screen reader friendly main heading -->
  <h1 class="sr-only">연락처 - 김개발</h1>

  <main class="min-h-screen pt-16">
    <div class="max-w-4xl mx-auto px-4 py-12">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">연락하기</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">새로운 기회나 협업에 대해 이야기해요</p>
      </div>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">연락 정보</h3>

            <!-- Email -->
            <div class="flex items-center space-x-4 mb-4">
              <div
                class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-blue-600 dark:text-blue-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">이메일</p>
                <button
                  id="email-copy"
                  class="text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer"
                  title="클릭하여 복사"
                >
                  your.email@example.com
                </button>
              </div>
            </div>

            <!-- Phone (Optional) -->
            <div class="flex items-center space-x-4 mb-4">
              <div
                class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-green-600 dark:text-green-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">전화</p>
                <p class="text-gray-900 dark:text-white">+82 10-0000-0000</p>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-center space-x-4">
              <div
                class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-purple-600 dark:text-purple-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">위치</p>
                <p class="text-gray-900 dark:text-white">서울, 대한민국</p>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">소셜 미디어</h3>
            <div class="flex space-x-4">
              <!-- GitHub -->
              <a
                href="https://github.com/yourusername"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors"
                aria-label="GitHub 프로필"
              >
                <svg
                  class="w-6 h-6 text-gray-700 dark:text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </a>

              <!-- LinkedIn -->
              <a
                href="https://linkedin.com/in/yourusername"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-blue-100 dark:bg-blue-900 hover:bg-blue-200 dark:hover:bg-blue-800 rounded-lg flex items-center justify-center transition-colors"
                aria-label="LinkedIn 프로필"
              >
                <svg
                  class="w-6 h-6 text-blue-600 dark:text-blue-400"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </a>

              <!-- Twitter -->
              <a
                href="https://twitter.com/yourusername"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-sky-100 dark:bg-sky-900 hover:bg-sky-200 dark:hover:bg-sky-800 rounded-lg flex items-center justify-center transition-colors"
                aria-label="Twitter 프로필"
              >
                <svg
                  class="w-6 h-6 text-sky-600 dark:text-sky-400"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Resume Download -->
          <div>
            <a
              href="/resume.pdf"
              download
              class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
              이력서 다운로드
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">메시지 보내기</h2>

          <form id="contact-form" class="space-y-6">
            <!-- Name -->
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                이름 *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition-colors"
                placeholder="홍길동"
              />
              <span class="error-message text-red-500 text-sm hidden"></span>
            </div>

            <!-- Email -->
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                이메일 *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition-colors"
                placeholder="your.email@example.com"
              />
              <span class="error-message text-red-500 text-sm hidden"></span>
            </div>

            <!-- Subject -->
            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                제목 *
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition-colors"
                placeholder="협업 제안"
              />
              <span class="error-message text-red-500 text-sm hidden"></span>
            </div>

            <!-- Message -->
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                메시지 *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition-colors resize-vertical"
                placeholder="안녕하세요! 프로젝트에 대해 이야기하고 싶습니다..."></textarea>
              <span class="error-message text-red-500 text-sm hidden"></span>
            </div>

            <!-- Submit Button -->
            <div>
              <button
                type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-400 text-white font-medium py-3 px-6 rounded-lg transition-colors disabled:cursor-not-allowed"
                id="submit-btn"
              >
                <span id="submit-text">메시지 보내기</span>
                <span id="submit-loading" class="hidden">
                  <svg
                    class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                    ></path>
                  </svg>
                  전송 중...
                </span>
              </button>
            </div>

            <!-- Success/Error Messages -->
            <div id="form-message" class="hidden">
              <div
                id="success-message"
                class="bg-green-100 dark:bg-green-900 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 px-4 py-3 rounded-lg hidden"
              >
                메시지가 성공적으로 전송되었습니다! 빠른 시일 내에 답변드리겠습니다.
              </div>
              <div
                id="error-message"
                class="bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 px-4 py-3 rounded-lg hidden"
              >
                메시지 전송 중 오류가 발생했습니다. 다시 시도해주세요.
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Type definition for API response
  interface ContactApiResponse {
    success: boolean;
    message?: string;
    error?: string;
  }

  // Email copy functionality
  document.getElementById('email-copy')?.addEventListener('click', async () => {
    const email = 'your.email@example.com';
    try {
      await navigator.clipboard.writeText(email);
      const button = document.getElementById('email-copy');
      const originalText = button?.textContent;
      if (button) {
        button.textContent = '복사됨!';
        button.classList.add('text-green-600', 'dark:text-green-400');
        setTimeout(() => {
          button.textContent = originalText;
          button.classList.remove('text-green-600', 'dark:text-green-400');
        }, 2000);
      }
    } catch (err) {
      console.error('Failed to copy email:', err);
    }
  });

  // Form validation and submission
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');
  const formMessage = document.getElementById('form-message');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  // Validation functions
  function validateEmail(email: string): boolean {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }

  function validateField(field: HTMLInputElement | HTMLTextAreaElement): boolean {
    const errorSpan = field.parentElement?.querySelector('.error-message') as HTMLElement;
    let isValid = true;
    let errorText = '';

    // Clear previous error
    errorSpan.classList.add('hidden');
    field.classList.remove('border-red-500');

    // Required field check
    if (field.hasAttribute('required') && !field.value.trim()) {
      isValid = false;
      errorText = '이 필드는 필수입니다.';
    }

    // Email validation
    if (field.type === 'email' && field.value && !validateEmail(field.value)) {
      isValid = false;
      errorText = '올바른 이메일 주소를 입력해주세요.';
    }

    // Message length validation
    if (field.name === 'message' && field.value && field.value.trim().length < 10) {
      isValid = false;
      errorText = '메시지는 최소 10자 이상 입력해주세요.';
    }

    // Show error if invalid
    if (!isValid) {
      field.classList.add('border-red-500');
      errorSpan.textContent = errorText;
      errorSpan.classList.remove('hidden');
    }

    return isValid;
  }

  // Add real-time validation
  form.querySelectorAll('input, textarea').forEach(field => {
    field.addEventListener('blur', () =>
      validateField(field as HTMLInputElement | HTMLTextAreaElement)
    );
    field.addEventListener('input', () => {
      // Clear error on input
      const errorSpan = field.parentElement?.querySelector('.error-message') as HTMLElement;
      if (!errorSpan.classList.contains('hidden')) {
        field.classList.remove('border-red-500');
        errorSpan.classList.add('hidden');
      }
    });
  });

  // Form submission
  form.addEventListener('submit', async e => {
    e.preventDefault();

    // Validate all fields
    const fields = form.querySelectorAll('input, textarea') as NodeListOf<
      HTMLInputElement | HTMLTextAreaElement
    >;
    let isFormValid = true;

    fields.forEach(field => {
      if (!validateField(field)) {
        isFormValid = false;
      }
    });

    if (!isFormValid) {
      return;
    }

    // Show loading state
    submitBtn.disabled = true;
    submitText?.classList.add('hidden');
    submitLoading?.classList.remove('hidden');
    formMessage?.classList.add('hidden');
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    try {
      // Submit form to API endpoint
      const formData = new FormData(form);

      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData,
      });

      const result: ContactApiResponse = await response.json();

      if (result.success) {
        // Show success message
        formMessage?.classList.remove('hidden');
        successMessage?.classList.remove('hidden');
        if (successMessage && result.message) {
          successMessage.textContent = result.message;
        }
        form.reset();
      } else {
        // Show error message with server error
        formMessage?.classList.remove('hidden');
        errorMessage?.classList.remove('hidden');
        if (errorMessage) {
          errorMessage.textContent = result.error ?? '메시지 전송 중 오류가 발생했습니다.';
        }
      }
    } catch (error) {
      console.error('Form submission error:', error);
      // Show error message
      formMessage?.classList.remove('hidden');
      errorMessage?.classList.remove('hidden');
      if (errorMessage) {
        errorMessage.textContent = '네트워크 오류가 발생했습니다. 다시 시도해주세요.';
      }
    } finally {
      // Reset button state
      submitBtn.disabled = false;
      submitText?.classList.remove('hidden');
      submitLoading?.classList.add('hidden');
    }
  });
</script>
